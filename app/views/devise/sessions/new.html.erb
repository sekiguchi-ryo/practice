<div class="m-auto w-96 rounded-md border-2 border-gray-100 flex flex-col items-center">
  <!-- <h2>ログイン</h2> -->

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "w-4/5"}) do |f| %>
    <div class="field mt-3">
      <%= f.label :email, "メールアドレス", class: "block text-sm text-slate-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", 
            class: "mt-1 block w-full px-3 py-2 border border-slate-300 rounded-md text-sm focus:outline-none focus:ring-1 focus:ring-sky-500" %>
    </div>

    <div class="field mt-3">
      <%= f.label :password, "パスワード", class: "block text-sm text-slate-700" %>
      <%= f.password_field :password, autocomplete: "current-password",
            class: "mt-1 block w-full px-3 py-2 border border-slate-300 rounded-md text-sm focus:outline-none focus:ring-1 focus:ring-sky-500" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mt-1">
        <%= f.check_box :remember_me, class: "rounded border border-slate-300"  %>
        <%= f.label :remember_me, "ログイン状態を保持する", class: "text-sm text-slate-700" %>
      </div>
    <% end %>

    <div class="actions mt-3">
      <%= f.submit "ログイン", class: "w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-md text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>